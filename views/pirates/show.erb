<h1>Pirate</h1>
<div class="pirate">
<h2>Name: <%= @pirate.name %></h3>
<h3>Weight: <%= @pirate.weight %></h3>
<h3>Height: <%= @pirate.height %></h3>
</div>
<br><br>

<h2>Ship(s)</h2>
<% @ships.each do |ship| %>
<div class="ships">
<h3>Name: <%= ship.name %></h3><br>
<h3>Type: <%= ship.type %></h3><br>
<h3>Booty: <%= ship.booty %></h3><br>
</div>
<% end %>


